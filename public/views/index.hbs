<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Selfie Lele Re</title>
    <link rel="icon" href="photos/icon.webp">
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
    integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
    crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
    integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
    crossorigin=""></script>
</head>
<body>
    {{>header}}
    
    <div class="location">
        <h3>know your geo location?</h3>
        <p>Latitude: <span id="lat"></span><br>longitude: <span id="lon"></span></p>
        <div id="mapid"></div>
    </div>
    
   <script>
       if('geolocation' in navigator) {
  /* geolocation is available */
        console.log('geolocation is available')
        navigator.geolocation.getCurrentPosition((position) => {
            document.getElementById('lat').innerHTML=position.coords.latitude.toFixed(2)+"&deg"
            document.getElementById('lon').innerHTML=position.coords.longitude.toFixed(2)+"&deg"

                var mymap = L.map('mapid').setView([position.coords.latitude,position.coords.longitude], 7);
                L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token=pk.eyJ1Ijoia2FydGlrZW4iLCJhIjoiY2s5c2FodnZ1MDBlaDNtb2RmMG95Z2tnbCJ9.T5tK6-IS9zNBaSVyCzD0mQ', {
                attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                maxZoom: 18,
                id: 'mapbox/streets-v11',
                tileSize: 512,
                zoomOffset: -1,
                accessToken: 'your.mapbox.access.token'
            }).addTo(mymap);

            var circle = L.circle([position.coords.latitude,position.coords.longitude], {
                color: 'red',
                fillColor: '#f03',
                fillOpacity: 0.5,
                radius: 5000
            }).addTo(mymap);
        });

    } else { 
  /* geolocation IS NOT available */
        console.log('geolocation not available!')
    }
   </script> 
</body>
</html>